<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="match_parent" 
	android:layout_height="wrap_content"   
	android:orientation="vertical" >
	<TextView
		android:layout_width="match_parent"
		android:layout_height="10dp"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<ImageView
			android:layout_width="40dp"
			android:layout_height="40dp"/>
		<ImageView
			style="@style/layout_horizontal"
			android:layout_weight="1" />
		<ImageView
			android:id="@+id/iv_user_detail_avatar"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:src="@drawable/ic_default_avatar"
			android:layout_gravity="center"/>
		<ImageView
			style="@style/layout_horizontal"
			android:layout_weight="1" />
		<LinearLayout
			android:layout_width="40dp"
			android:layout_height="match_parent"
			android:gravity="center_vertical"
			android:orientation="vertical">
			<ImageView
				android:id="@+id/iv_user_detail_manage"
				android:layout_width="32dp"
				android:layout_height="32dp"
				android:padding="3dp"
				android:layout_gravity="top"
				android:src="@drawable/ic_manage"
				android:background="@drawable/selector_transp"/>
			<ImageView
				android:id="@+id/iv_user_detail_add_contact"
				android:layout_width="32dp"
				android:layout_height="32dp"
				android:padding="3dp"
				android:layout_gravity="bottom"
				android:src="@drawable/ic_add_contact"
				android:background="@drawable/selector_transp"/>
		</LinearLayout>

	</LinearLayout>
	<TextView
		android:id="@+id/tv_user_detail_id"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:textSize="@dimen/text_size_small"
		android:gravity="center"/>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="10dp"/>
</LinearLayout>