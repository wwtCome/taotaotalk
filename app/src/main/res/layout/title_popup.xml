<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:gravity="center">

    <ListView
        android:id="@+id/title_list"
        android:layout_width="@dimen/popup_width"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"
        android:layout_margin="@dimen/popup_margin"
        android:background="@color/popup_color_bgc"
        android:divider="@drawable/mm_title_functionframe_line"
        android:listSelector="@drawable/list_selector_transition"
        android:padding="3dp"
        android:scrollingCache="false" />

</LinearLayout>