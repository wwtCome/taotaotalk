<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:gravity="center_vertical"
	android:layout_height="50dp"
	android:orientation="horizontal"
	android:background="@drawable/selector_other_channel" >

	<ImageView
		android:id="@+id/channel_row_expand"
		android:layout_gravity="center_vertical"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:padding="2dp"
		style="@style/BorderlessButton"
		android:src="@drawable/ic_action_add"/>

	<FrameLayout
		android:layout_width="0dp"
		android:layout_height="36dp"
		android:layout_weight="1">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1">

			<TextView
				android:id="@+id/channel_row_name"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:singleLine="true"
				android:text="@string/noname"
				android:textColor="@color/nearblack"
				android:textSize="@dimen/text_sizt_contact" />

			<TextView
				android:id="@+id/channel_row_count"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:singleLine="true"
				android:text="(0)"
				android:textColor="@android:color/darker_gray"
				android:textSize="@dimen/text_size_small2" />
		</LinearLayout>

		<TextView
			android:id="@+id/tv_chan_talker"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical|right"
			android:alpha="0.6"
			android:background="@drawable/area_bg"
			android:ellipsize="none"
			android:gravity="center_vertical"
			android:maxWidth="100dp"
			android:singleLine="true"
			android:textColor="@color/dimgray"
			android:textSize="@dimen/text_size_small3"
			android:visibility="gone"
			/>

	</FrameLayout>

	<TextView
		android:id="@+id/tv_channel_number"
		android:layout_width="45dp"
		android:layout_height="@dimen/row_height"
		android:singleLine="true"
		android:gravity="center_vertical"
        android:visibility="gone"
		android:text="#1000"
		android:textSize="@dimen/text_size_small2"
		android:textColor="@color/black" />

	<ImageView
		android:id="@+id/iv_channel_listen"
		style="@style/BorderlessButton"
		android:layout_width="42dp"
		android:layout_height="42dp"
		android:layout_gravity="center_vertical"
		android:padding="4dp"
		android:src="@drawable/im_monitor" />

</LinearLayout>
