<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white" >

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="@dimen/popup_setting"
				android:background="@drawable/setting_bgd"
				android:gravity="center_vertical"
				android:paddingLeft="15dp"
				android:text="@string/language"
				android:textSize="@dimen/text_sizt_contact" />

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/black" />

			<LinearLayout
				android:id="@+id/ll_alert_chain"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:background="@drawable/selector_setting"
				android:focusable="true"
				android:gravity="center_vertical">

				<ImageView
					android:id="@+id/iv_alert_chain"
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:src="@drawable/checkbox_off" />

				<TextView
					android:id="@+id/textView3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:singleLine="true"
					android:text="中文"
					android:textSize="@dimen/text_size_small2" />

				<TextView
					style="@style/layout_horizontal"
					android:layout_weight="1" />



			</LinearLayout>

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/divider_gray" />

			<LinearLayout
				android:id="@+id/ll_alert_english"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:background="@drawable/selector_setting"
				android:focusable="true"
				android:gravity="center_vertical">

				<ImageView
					android:id="@+id/iv_alert_english"
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:src="@drawable/checkbox_off" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:singleLine="true"
					android:text="English"
					android:textSize="@dimen/text_size_small2" />

				<TextView
					style="@style/layout_horizontal"
					android:layout_weight="1" />


			</LinearLayout>

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/divider_gray" />

			<LinearLayout
				android:id="@+id/ll_alert_minawen"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:background="@drawable/selector_setting"
				android:focusable="true"
				android:gravity="center_vertical">

				<ImageView
					android:id="@+id/iv_alert_minawen"
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:src="@drawable/checkbox_off" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:singleLine="true"
					android:text="mianwen"
					android:textSize="@dimen/text_size_small2" />

				<TextView
					style="@style/layout_horizontal"
					android:layout_weight="1" />


			</LinearLayout>

		</LinearLayout>

	</ScrollView>

</LinearLayout>