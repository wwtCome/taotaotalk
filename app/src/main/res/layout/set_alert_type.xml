<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:orientation="vertical"
	>

	<LinearLayout
		android:id="@+id/ll_alert_type_normal"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:gravity="center"
		android:focusable="true"
		android:background="@drawable/selector_setting">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/normal"
			android:textSize="@dimen/text_size_small"
			android:layout_gravity="center"/>
		<ImageView
			android:id="@+id/iv_alert_type_normal"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:src="@drawable/ble_connected"/>
	</LinearLayout>
	<ImageView
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/divider_gray"/>
	<LinearLayout
		android:id="@+id/ll_alert_type_ham"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:gravity="center"
		android:focusable="true"
		android:background="@drawable/selector_setting">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="HAM"
			android:textSize="@dimen/text_size_small"
			android:layout_gravity="center"/>
		<ImageView
			android:id="@+id/iv_alert_type_ham"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:src="@drawable/ble_connected"/>
	</LinearLayout>

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/black" />

	<TextView
		android:id="@+id/music_tv_okc"
		android:layout_width="match_parent"
		android:layout_height="@dimen/popup_setting"
		android:background="@drawable/selector_setting"
		android:focusable="true"
		android:gravity="center"
		android:text="@string/ok"
		android:textSize="@dimen/text_sizt_contact" />

</LinearLayout>